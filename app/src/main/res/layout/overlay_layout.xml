<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/overlay_bg"
    android:padding="8dp">

    <!-- ステータステキスト -->
    <TextView
        android:id="@+id/overlayText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/status_ready"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="4dp"
        android:gravity="center" />

    <!-- コントロールボタン -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 前ページボタン -->
        <ImageView
            android:id="@+id/btnPreviousPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/teal_700"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="前のページ" />

        <!-- 再生/一時停止ボタン -->
        <ImageView
            android:id="@+id/btnPlayPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/purple_500"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="再生/一時停止" />

        <!-- 次ページボタン -->
        <ImageView
            android:id="@+id/btnNextPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/teal_700"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="次のページ" />

        <!-- 閉じるボタン -->
        <ImageView
            android:id="@+id/btnCloseOverlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_dark"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_delete"
            android:contentDescription="閉じる" />

    </LinearLayout>

</LinearLayout>